extends layout
block body
  .deckBrowser(ng-app="CardCzar" ng-cloak ng-controller="CCDeckBrowser as db")
    .deck(ng-repeat="deck in db.decks") 
      h1 {{deck.name}}
      table.table.table-condensed.table-striped.table-hover
        tr
          th Text
          th Black?
          th Choose number
        tr(ng-repeat="card in deck.cards")
          td {{card.text}}
          td {{card.isBlack}}
          td {{card.chooseNum}}
block scripts
  script(src="/bower_components/angular/angular.min.js")
  script(src="/js/app.js")
  script(src="/js/filters.js")
  script(src="/js/services.js")
  script(src="/bower_components/angular-resource/angular-resource.min.js")
