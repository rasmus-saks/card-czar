extends layout
block body
  .deckBrowser(ng-cloak ng-controller="CCDeckBrowser as db")
    form(role="form")
      label.radio-inline
        input(type="radio" ng-model="db.filter" ng-value="" name="optradio")
        | All
      label.radio-inline
        input(type="radio" ng-model="db.filter" ng-value="true" name="optradio")
        | Black
      label.radio-inline
        input(type="radio" ng-model="db.filter" ng-value="false" name="optradio")
        | White
    .deck
      table.table.table-condensed.table-striped.table-hover
        tr
          th Deck
          th Text
          th Black?
          th Choose number
        tr(ng-repeat="card in db.cards | filter: {isBlack:db.filter}")
          td {{card.name}}
          td {{card.text}}
          td {{card.isBlack}}
          td {{card.chooseNum}}
