extends layout
block body
  .navbar
    .container
      .col-lg-12
        .navbar-header
          button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") Card Czar
        .collapse.navbar-collapse#navbar-collapse
          ul.nav.navbar-nav.navbar-right(ng-cloak ng-show="main.loaded")
            li
              p.navbar-text(ng-show="main.user.id") Logged in as 
                span#user {{main.user.name}}
            li
              a.btn.navbar-btn.invert(ng-show="main.user.id" href="/auth/logout") Log out
            li
              a.btn.navbar-btn.invert(ng-hide="main.user.id" href="/auth") Log in
  .intro
    .container
      .col-lg-8.col-lg-offset-2
        p #{lang.landing.valueprop}
        .row
          .col-lg-6
            .input-group.input-group-lg.landing-button-adjustment
              input.form-control#lobbycode(type="text" placeholder=lang.landing.lobbycode ng-model="main.lobbycode")
              span.input-group-btn
                a.btn.btn-lg#joinlobby(ng-href="{{'/game/' + main.lobbycode}}") #{lang.landing.join}
        .row
          .col-lg-6#createLobby
            .btn.btn-lg.btn-block.landing-button-adjustment(href="/game/new") #{lang.landing.createlobby}
        .row
          .col-lg-6
            p #{lang.landing.users}
              span#users {{ main.usercount }}
            p #{lang.landing.games}
              span#games {{ main.gamecount }}
  footer
    .container
      p
        | #{lang.landing.authors}
        br
        //| Pointless links | map | some facebook page | some random ID card thing
append scripts
  script(src="/js/landing.js")
