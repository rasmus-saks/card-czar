extends layout
block body
  .game.col-lg-6.col-lg-offset-3(ng-controller="CCGame as ccmain")
    .lobby(ng-hide = "ccmain.game.status!==0")
      h1 #{lang.game.lobby}
      h1
      .users
        .user(ng-repeat="user in ccmain.users") {{user.name}}
      .btn.btn-primary.btn-lg.btn-block(ng-show="ccmain.player.id==ccmain.game.HostId" ng-click="ccmain.startgame()") #{lang.game.startgame}
    .game(ng-show = "ccmain.game.status===1")
      .black-card
        |{{ccmain.game.BlackCard.text}}
      .instruction
      .white-cards
        .white-card(ng-repeat="card in ccmain.cards")
          |{{card.text}}

prepend scripts
  script.
    var lobbycode = "!{code}";
  script(src="/socket.io/socket.io.js")
